@using Newtonsoft.Json;
@model IndexViewModel
@{
    ViewData["Title"] = "Home Page";
}
<script type="text/javascript" src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>




<div class="text-center">
    <h1 class="display-4">Welcome @(Model.loggedInPerson.FirstName)</h1>

</div>

@{
    if (!Model.loggedInPerson.isRegisteredToService)
    {
        <h2>Please Register</h2>
    }
}
<!-- enctype ="multipart/form-data" = Encoding type that MUST be specified in HTML to enable file upload.    -->
<div class="text-center mt-0">
        <input class="custom-file-upload p-2" data-id="uploadfile" data-action="uploadFileBtn" type="button" value="Upload data" />
</div>

    <div class="row justify-content-center">

        <div class="card bg-transparent border border-0 w-100 d-lg-none">
            <div class="card-body">
                <canvas id="myChart" class=""></canvas>
            </div>

            <div class="card bg-transparent border border-0 w-75 d-none">
                <div class="card-body">
                    <canvas id="myChart" class=""></canvas>
                </div>
            </div>
        </div>
    </div>

    <!-- Space for details and price       -->
    <div class="container mt-3 mb-3 text-center">

        <div class="row">
            <div class="col-3 d-flex justify-content-end">
                <img src="~/css/assets/trending.png">
            </div>

            <div class="col-3 d-flex justify-content-start">
                <p>
                    10%
                </p>
            </div>

            <div class="col-3 d-flex justify-content-end">
                <img src="~/css/assets/line-chart.png">
            </div>

            <div class="col-3 d-flex justify-content-start">
                <p>
                    1000%
                </p>
            </div>

        </div>

        <div class="row mt-4">
            <div class="col-3 d-flex justify-content-end">
                <img src="~/css/assets/cost.png">
            </div>

            <div class="col-9 d-flex justify-content-start">
                <p>100 c/kWh</p>
            </div>
        </div>
    </div>

    <div class="accordion accordion-flush" id="accordionFlushExample">

        <div class="accordion-item">

            <h2 class="accordion-header" id="flush-headingOne">

                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#flush-collapseOne" aria-expanded="false" aria-controls="flush-collapseOne">

                    Tips for eletricity consumption

                </button>

            </h2>

            <div id="flush-collapseOne" class="accordion-collapse collapse" aria-labelledby="flush-headingOne" data-bs-parent="#accordionFlushExample">

                <div class="accordion-body">

                    <div class="d-flex justify-content-left mt-1 mb-1">

                        <button onclick="increment()" id="plus">+</button>

                        <button onclick="decrement()" id="minus">-</button>

                        <iconify-icon inline icon="mdi:washing-machine" id="washingMachine" width="60" height="60" flip="horizontal"> </iconify-icon>

                        <input id=demoInput type=number min=0 max=100>

                    </div>

                </div>

            </div>

        </div>

        <hr class="line text-center">

        <div class="container">

            <div class="row">

                <div class="col-1 d-flex justify-content-start align-items-center">
                    <img src="~/css/assets/lightning.svg" class="icons">
                </div>

                <div class="col-5 d-flex justify-content-start align-items-start">
                    <p>Sähkönkulutus:</p>
                </div>

                <div class="col-1 d-flex justify-content-start align-items-center">
                    <img src="~/css/assets/euro.svg" class="icons">
                </div>

                <div class="col-5 d-flex justify-content-start">
                    <p>Sähkönhinta:</p>
                </div>

            </div>

            <div class="row">

                <div class="col-6 d-flex justify-content-center ">
                    <p>100 kWh</p>
                </div>
                <div class="col-6 d-flex justify-content-center">
                    <p>100 kWh</p>
                </div>
            </div>
        </div>
    </div>

    <partial name="_PartialFileUploadModal" />





    <div id="appdata" data-obj="@JsonConvert.SerializeObject(Model.dayAHeadPriceData.DayAheadPrices)"></div>


    <div>Api result</div>

    <div>@ViewData["ApiResult"]</div>

    <script>
        function increment() {
            document.getElementById('demoInput').stepUp();
        }
        function decrement() {
            document.getElementById('demoInput').stepDown();
        }
    </script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://code.jquery.com/jquery-1.12.4.js"></script>
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
    <script src="https://code.iconify.design/iconify-icon/1.0.0-beta.3/iconify-icon.min.js"></script>

