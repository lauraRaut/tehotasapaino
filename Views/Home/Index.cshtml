    <script>



        function increment(id, priceid, kwh) {
            document.getElementById(id).stepUp();
            CalculateMachine(id, priceid, kwh);

        }
        function decrement(id, priceid, kwh) {
            document.getElementById(id).stepDown();
            CalculateMachine(id, priceid, kwh);
        }
    </script>
