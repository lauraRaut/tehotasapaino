@using TempDataExtensions;
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=no" />
    <title>@ViewData["Title"] - Tehotasapaino</title>
    <script type="text/javascript" src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
    <link rel="stylesheet" asp-append-version="true" href="~/css/style.css" />
</head>
<body>
    @if (TempData.Get<SuccessMessage>("UserMessage") != null)
    {
        var message = TempData.Get<SuccessMessage>("UserMessage") as Tehotasapaino.Models.SuccessMessage;
        <div class="alert @message.CssClassName d-flex align-items-center alert-dismissible fade show" role="alert">
            <i class="bi bi-file-earmark-check-fill me-2" width="2em" height="2em"></i>
            <div><strong>@message.Title</strong> @message.DisplayMessage</div>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close">&times;</button>


        </div>
    }
    <div id="JSAlertPlaceholder" style="z-index:2000; position:absolute; width:100%;"></div>
    <header>
        <nav class="navbar navbar-expand navbar-light justify-content-center p-0">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item active">
                    <a class="nav-link h3 @(ViewData["HomeSelectedClass"])" href="@Url.Action("Index", "Home")">Home <span class="sr-only"></span></a>
                </li>
                <li class="nav-item">
                    <a class="nav-link h3 @(ViewData["PriceAlertSelectedClass"])" style="color:rgb(228, 228, 122);" href="@Url.Action("UserPriceAlertConfigurator", "PriceLightAlert")">Price alerts</a>
                </li>

            </ul>

        </nav>
    </header>
    <div class="container mt-3 mb-3 text-center">
        @RenderBody()
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa" crossorigin="anonymous"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
